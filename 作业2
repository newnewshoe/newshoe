#include <stdio.h>

int main() {
    int input;
    
    printf("输入说明：\n");
    printf("  -1: 退出程序\n");
    printf("   0: 输出 helloworld\n");
    printf("   1: 输出 HELLOWORLD\n");
    
    // 使用循环 
    while (1) {
        printf("\n请输入数字(-1, 0, 1): ");
        scanf("%d", &input);
        
        // 使用if-else条件语句判断用户输入
        if (input == -1) {
            printf("程序退出\n");
            break;  // 跳出循环
        }
        else if (input == 0) {
            printf("helloworld\n");
        }
        else if (input == 1) {
            printf("HELLOWORLD\n");
        }
        else {
            printf("输入无效！请输入-1、0或1。\n");
        }
    }
    
    return 0;
}
